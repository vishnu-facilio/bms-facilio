<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">


<struts>
    <package name="iotPush" namespace="/api/v3/iot/data"
             extends="struts-default,json-default">
        <interceptors>
            <interceptor name="agentApiKeyInterceptor"
                         class="com.facilio.bmsconsole.interceptors.AgentApiKeyInterceptor">
            </interceptor>
            <interceptor-stack name="agentApiInterceptorStack">
                <interceptor-ref name="agentApiKeyInterceptor"/>
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="json">
                    <param name="enableSMD">true</param>
                </interceptor-ref>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="agentApiInterceptorStack"/>
        <action name="push"
                class="com.facilio.agentv2.actions.RestAgentPushAction"
                method="push">
            <result name="success" type="json">
                <param name="statusCode">200</param>
            </result>
        </action>
    </package>

</struts>
