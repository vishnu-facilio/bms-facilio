<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<package name="publicApi" namespace="/api/public/v2" extends="v2BaseApi">
		<interceptors>
			<interceptor-stack name="defaultInterceptor">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="json">
					<param name="enableSMD">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="defaultInterceptor" />		
	</package>
	
	<package name="publicFilesv2" namespace="/api/public/v2/files" extends="publicApi">
		<action name="preview"
			class="com.facilio.bmsconsole.actions.FileAction"
			method="previewPublicFile">
			<param name="permission">READ</param>
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">downloadStream</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>
	<package name="publicFilesv3" namespace="/api/v3/files/public" extends="publicApi">
		<action name="preview"
			class="com.facilio.bmsconsole.actions.V3FileAction"
			method="previewFile">
			<param name="permission">READ</param>
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">downloadStream</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		<action name="download"
			class="com.facilio.bmsconsole.actions.V3FileAction"
			method="previewFile">
			<param name="permission">READ</param>
			<param name="isDownload">true</param>
			<result name="success" type="stream">
				<param name="contentType">${contentType}</param>
				<param name="inputName">downloadStream</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
	</package>
</struts>