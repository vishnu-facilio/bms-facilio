<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

	<package name="bmtsApi" strict-method-invocation="false" namespace="/api"  extends="struts-default,json-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>
		<interceptors>
			<interceptor name="authinterceptor"
				class="com.facilio.bmsconsole.interceptors.AuthInterceptor" />
			<interceptor-stack name="defaultInterceptor">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authinterceptor" />
				<interceptor-ref name="json">
					<param name="enableSMD">true</param>
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="defaultInterceptor" />
		<global-results>
			<result name="login" type="redirect">
				<param name="location">/login</param>
				<param name="parse">false</param>
			</result>
			<result name="unauthorized" type="redirect">
				<param name="location">/jsps/unauthorized.jsp</param>
				<param name="parse">false</param>
			</result>
		</global-results>
	</package>
	
	<package name="eventSummaryApi" namespace="/api/event" extends="home">
		<action name="*" class="com.facilio.events.actions.EventAction"
			method="eventList">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<param name="viewName">{1}</param>
			<result name="success" type="json">
				<param name="includeProperties">events,events\[\d+\],events\[\d+\].*</param>
			</result>
		</action>
	</package>
	
	<package name="eventSummaryApi" namespace="/api/event/summary" extends="home">
		<action name="*" class="com.facilio.events.actions.EventAction" method="eventDetail">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">event</param>
			</result>
		</action>
	</package>
	
	<package name="alarmEventApi" namespace="/api/alarm/event" extends="home">
		<action name="*" class="com.facilio.events.actions.EventAction" method="eventList">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<param name="alarmId">{1}</param>
			<result name="success" type="json">
				<param name="includeProperties">events,events\[\d+\],events\[\d+\].*</param>
			</result>
		</action>
	</package>
	
	<package name="eventApi" namespace="/api/event" extends="home">
		<action name="addevent" class="com.facilio.events.actions.EventAction" method="addEvent">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="includeProperties">^event.*</param>
			</result>
		</action>
		<action name="allRules" class="com.facilio.events.actions.EventAction" method="eventRules">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">eventRules</param>
			</result>
		</action>
		
		<action name="addEventRule" class="com.facilio.events.actions.EventAction" method="addEventRule">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">eventRule</param>
			</result>
		</action>
		
		 <action name="addReadingrules" class="com.facilio.bmsconsole.actions.WorkflowRuleAction" method="addReadingRule">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">eventRule</param>
			</result>
		</action>
		
		<action name="updateEventRule" class="com.facilio.events.actions.EventAction" method="updateEventRule">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">eventRule</param>
			</result>
		</action>
		
		<action name="nodes" class="com.facilio.events.actions.EventAction" method="getAllNodes">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="root">nodes</param>
			</result>
		</action>
		
		<action name="updatenode" class="com.facilio.events.actions.EventAction" method="updateNodeWithAsset">
			<param name="permission">ORG_ACCESS_ADMINISTER</param>
			<result name="success" type="json">
				<param name="includeProperties">result</param>
			</result>
		</action>
	</package>
</struts>